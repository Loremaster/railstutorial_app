<h1>Edit user</h1>

<hr size="4" />

<div>
  <%= gravatar_for @user %>
  <a href="http://gravatar.com/emails" target="_blank">Change your avatar</a>
</div>

<hr size="4" />

<%= form_for( @user ) do |f| %>
  <%= render 'fields', 			      :f => f %>																<%# We use :object => f.object to make partialwork for us. It ctreates variable "object" in partial%>
  <%= render 'notification_settings', :f => f%>
  <div class="actions">
    <%= f.submit "Update", :class => "btn-primary" %>
  </div>
<% end %>


