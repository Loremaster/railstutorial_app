<tr>
  <td class="gravatar">
    <%= link_to gravatar_for(feed_content.user), feed_content.user %>
  </td>
  <td class="micropost">
    <span class="user">
      <%= link_to feed_content.user.name, feed_content.user %>
    </span>
    <span class="content"><%= wrap( feed_content.content ) %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(feed_content.created_at) %> ago.
    </span>
  </td>
</tr>